<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Controller.USUARIO.CadastrarUsuario"
                                                   android:id="@+id/linearLayout2"
>

    <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="text"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText6"
            android:textColorHint="@android:color/tertiary_text_light"
            android:background="@drawable/entrada_customizada2"
            android:layout_marginBottom="5dp"/>

    <EditText
            android:id="@+id/editText6"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ems="10"
            android:hint="Telefone"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            android:inputType="phone"
            android:textColorHint="@android:color/tertiary_text_light"
            android:background="@drawable/entrada_customizada2"
            android:layout_marginBottom="5dp"/>


    <EditText
            android:id="@+id/editText3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            android:textColorHint="@android:color/tertiary_text_light"
            android:background="@drawable/entrada_customizada2"
            android:layout_marginBottom="5dp"/>

    <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ems="10"
            android:hint="Definir uma Senha"
            android:inputType="textPassword"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText5"
            android:textColorHint="@android:color/tertiary_text_light"
            android:background="@drawable/entrada_customizada2"
            android:layout_marginBottom="5dp"/>

    <EditText
            android:id="@+id/editText5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ems="10"
            android:hint="Confirmar a Senha"
            android:inputType="textPassword"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textColorHint="@android:color/tertiary_text_light"
            android:background="@drawable/entrada_customizada2"/>


    <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/holo_blue_dark"
            android:text="ENTRAR"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:layout_marginRight="15dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:srcCompat="@mipmap/icone_app_512"
            android:layout_marginLeft="115dp" android:layout_marginStart="115dp" android:layout_marginEnd="115dp"
            android:layout_marginRight="115dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>