<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/relativeLayout3"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@mipmap/fundo3"
                                                   tools:context=".MainActivity">


    <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="50dp"

            android:layout_marginBottom="196dp"
            android:text="DISK FRETE"
            android:textColor="@color/cardview_light_background"
            android:textSize="45dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btCliente"
            tools:ignore="MissingConstraints" android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:layout_marginTop="74dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp" android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp" android:layout_marginRight="35dp"/>
    <Button
            android:id="@+id/btCliente"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_customizado_2"
            android:text="Conectar como Usuario"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/btMotorista"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:id="@+id/btMotorista"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_customizado_2"
            android:text="Conectar como Motorista"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="71dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:textColor="@color/common_google_signin_btn_text_dark_focused"/>


</androidx.constraintlayout.widget.ConstraintLayout>
