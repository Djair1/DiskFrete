<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Usuario.UsuarioHome">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/ListaMotorista"

    />
    <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:menu_fab_label="Menu"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/floatingActionButton1" android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
    >

        <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Cadastrar Frete"
                android:clickable="true"
                android:src="@mipmap/adicionar_frete"
                app:srcCompat="@android:drawable/ic_menu_manage"
                android:id="@+id/floatingActionButton2"

        />
        <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Atualizar Perfil"
                android:clickable="true"
                android:src="@mipmap/editar_usuario"
                app:srcCompat="@android:drawable/ic_menu_manage"
                android:id="@+id/floatingActionButton3"

        />

        <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Logout"
                android:clickable="true"
                android:src="@mipmap/logout"
                android:id="@+id/floatingActionButton4"

        />

    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>